<p id="notice"><%= notice %></p>

<h1>Listing Animals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Species</th>
      <th>Summary</th>
      <th>Organization</th>
      <th>Fulldescription</th>
      <th>Amount</th>
      <th>Amountraised</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.species %></td>
        <td><%= animal.summary %></td>
        <td>
            <% if animal.organization_id != nil %>
            <%= link_to "#{Organization.find(animal.organization_id).organizationName}", organization_path(animal.organization_id) %>
            <% else %>
            None
            <% end %>
        </td>
        <td><%= animal.fullDescription %></td>
        <td><%= animal.amount %></td>
        <td><%= animal.amountRaised %></td>
        <td><%= image_tag animal.picture.url(:thumb) %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

